<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bottom_sheet"
    android:layout_height="400dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:background="@color/color_Shenhei"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_dt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e56e59"
            android:textStyle="bold" />

        <TextView
            android:layout_toEndOf="@+id/tv_dt_1"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_dd_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f0f0f0" />
        <TextView
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_dd_1"
            android:id="@+id/tv_dt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e56e59"
            android:textStyle="bold" />

        <TextView
            android:layout_alignStart="@+id/tv_dd_1"
            android:layout_toEndOf="@+id/tv_dt_2"
            android:layout_below="@+id/tv_dd_1"
            android:id="@+id/tv_dd_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f0f0f0" />
    </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>