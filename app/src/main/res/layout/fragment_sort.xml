<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView android:padding="14dp"
        android:id="@+id/rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="0dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bubble_scroller"
        android:layout_marginRight="0dp" />

    <cdflynn.android.library.scroller.BubbleScroller
        android:id="@+id/bubble_scroller"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:paddingBottom="32dp"
        app:bubbleScroller_highlightColor="@color/colorPrimaryDark"
        app:bubbleScroller_textColor="@android:color/black"
        app:bubbleScroller_textSize="@dimen/text_size_small"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="0dp" />
</android.support.constraint.ConstraintLayout>


