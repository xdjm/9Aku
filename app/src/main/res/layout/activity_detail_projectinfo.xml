<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:background="@color/color_Shenhei"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@color/color_Danhong"
                android:button="@drawable/selector_detail_star"
                android:id="@+id/watchbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:textColor="@color/color_Danhong"
                android:button="@drawable/selector_detail_watch"
                android:id="@+id/starbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:textColor="@color/color_Danhong"
                android:button="@drawable/selector_detail_fork"
                android:id="@+id/forkbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:textColor="@color/color_Danhong"
                android:button="@drawable/selector_detail_issue"
                android:id="@+id/issuebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ViewStub
            android:layout_below="@+id/info"
            android:inflatedId="@+id/progressbar"
            android:layout_centerInParent="true"
            android:id="@+id/vs_progressbar"
            android:layout="@layout/viewstub_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <br.tiagohm.markdownview.MarkdownView
            android:layout_below="@+id/info"
            android:id="@+id/markdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:escapeHtml="false" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
